<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
     <record id="view_partner_donate_types_tree" model="ir.ui.view">
            <field name="name">partner.donate.types.tree</field>
            <field name="model">partner.donate.types</field>
               <field name="arch" type="xml">
                <tree sample="1" multi_edit="1" export_xlsx="0">
                    <field name="name"/>
                </tree>
            </field>
        </record>

     <record id="view_partner_donate_types_form" model="ir.ui.view">
            <field name="name">partner.donate.types.form</field>
            <field name="model">partner.donate.types</field>
               <field name="arch" type="xml">
                <form>
                    <sheet>
                       <group>
                            <field name="name"/>
                       </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_partner_donate_types" model="ir.actions.act_window">
            <field name="name">Donate Types</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">partner.donate.types</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face" >
                    Create your first donate types!
                </p>
            </field>
        </record>

        <menuitem  id="menu_partner_donate_types"
               name="Donate Types"
               action="action_partner_donate_types"
               parent="contacts.res_partner_menu_config"
               sequence="10"/>

</odoo>
