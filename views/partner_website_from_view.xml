<?xml version="1.0" encoding="utf-8"?>

<odoo>
	<record id="website_menu_volunteer_from" model="website.menu">
		<field name="name">Create Volunteer</field>
		<field name="url">/volunteer_webform</field>
		<field name="parent_id" ref="website.main_menu"/>
		<field name="sequence" type="int">0</field>
	</record>

   <template id="create_volunteer" name="Create Volunteer">
	   <t t-call="website.layout">
		   <div id="wrap">
			   <div class="stk_structure">
				   <div class="container">
					   <form role="form" action="/create/volunteer" method="POST">
						   <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
						   <div class="form-group">
							   <label for="name" class="control-label">Name Surname</label>
							   <input type="text" name="name" t-att-value="name" id="name"
									  class="form-control" placeholder="Name-Surname"/>
							   <label for="phone" class="control-label">Phone Number</label>
							   <input type="text" name="phone" t-att-value="phone" id="phone"
									  class="form-control" placeholder="05xx-xxx-xx-xx"/>
						   </div>
						   <div class="form-group">
							   <label for="email" class="control-label">Mail</label>
							   <input type="text" name="email" t-att-value="email" id="email"
									  class="form-control"/>
						   </div>
						   <div class="form-group">
							   <label for="partner_member_types" class="control-label">Member Types</label>  <!--# FieldName-->
							   <select name="partner_member_types" class="form-control link-style">  <!--FieldName-->
								   <t t-foreach="member_rec" t-as="member">  <!--value of volunteer_webform-->
									   <option t-esc="member.name" t-att-value="member.id"/>
								   </t>
							   </select>
						   </div>
						    <div class="form-group">
							   <label for="partner_blood_groups" class="control-label" >Blood Types</label>
							   <select name="partner_blood_groups" class="form-control link-style">
								   <t t-foreach="blood_rec" t-as="blood">
									   <option t-esc="blood.name" t-att-value="blood.id"/>
								   </t>
							   </select>
						   </div>
						    <div class="clearfix_stk_login_buttons">
							   <button type="submit" class="btn btn-primary pull-left">Create Volunteer</button>
						   </div>
					   </form>
				   </div>
			   </div>
		   </div>
	   </t>
   </template>

   <record id="volunteer_thanks" model="website.page">
		<field name="name">Thanks</field>
		<field name="type">qweb</field>
		<field name="url">/volunteer-thank-you</field>
		<field name="website_published">True</field>
		<field name="key">contacts_stk.volunteer_thanks</field>
		<field name="arch" type="xml">
			<t name="Thanks" t-name="contacts_stk.volunteer_thanks">
				<t t-call="website.layout">
					<div id="wrap">
						<div class="container">
							<h1>Thanks!</h1>
							<div class="row">
								<div class="col-lg-8">
									<div class="alert alert-success" role="status">
										The volunteer has been created successfully.
									</div>
									<p>
										Visit our website any time!
									</p>
								</div>
							</div>
						</div>
					</div>
				</t>
			</t>
		</field>
	</record>

   <record id="website_menu_donate_from" model="website.menu">
		<field name="name">Donate</field>
		<field name="url">/donate_webform</field>
		<field name="parent_id" ref="website.main_menu"/>
		<field name="sequence" type="int">0</field>
	</record>


   <template id="donate" name="Donate">
	   <t t-call="website.layout">
		   <div id="wrap">
			   <div class="stk_structure">
				   <div class="container">
					   <form role="form" action="/donate" method="POST">
						   <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
						   <div class="form-group">
							   <label for="name" class="control-label">Name-Surname</label>
							   <input type="text" name="name" t-att-value="name" id="name"
									  class="form-control" placeholder="Name"/>
							   <label for="phone" class="control-label">Phone Number</label>
							   <input type="text" name="phone" t-att-value="phone" id="phone"
									  class="form-control" placeholder="05xx-xxx-xx-xx"/>
						   </div>
						   <div class="form-group">
							   <label for="email" class="control-label">Mail</label>
							   <input type="text" name="email" t-att-value="email" id="email"
									  class="form-control"/>
						   </div>
						   <div class="form-group">
							   <label for="partner_donate_types" class="control-label">Donate Types</label><!--# FieldName-->
							   <select name="partner_donate_types" class="form-control link-style">  <!--FieldName-->
								   <t t-foreach="donate_rec" t-as="donate">  <!--value of donate_webform-->
									   <option t-esc="donate.name" t-att-value="donate.id"/>
								   </t>
							   </select>
						   </div>
						    
						    <div class="clearfix_stk_login_buttons">
							   <button type="submit" class="btn btn-primary pull-left"> Donate</button>
						   </div>
					   </form>
				   </div>
			   </div>
		   </div>
	   </t>
   </template>

   <record id="donate_thanks" model="website.page">
		<field name="name">Thanks</field>
		<field name="type">qweb</field>
		<field name="url">/donate-thank-you</field>
		<field name="website_published">True</field>
		<field name="key">contacts_stk.donate_thanks</field>
		<field name="arch" type="xml">
			<t name="Thanks" t-name="contacts_stk.donate_thanks">
				<t t-call="website.layout">
					<div id="wrap">
						<div class="container">
							<h1>Thanks!</h1>
							<div class="row">
								<div class="col-lg-8">
									<div class="alert alert-success" role="status">
										The donation successfully made.
									</div>
									<p>
										Visit our website any time!
									</p>
								</div>
							</div>
						</div>
					</div>
				</t>
			</t>
		</field>
	</record>

</odoo>

